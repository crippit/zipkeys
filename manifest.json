{
  "manifest_version": 3,
  "name": "Zip Captions Keyboard Shortcuts",
  "version": "1.0",
  "description": "Adds keyboard shortcuts to Zip Captions.",
  "permissions": [
      "tabs"
  ],
  "host_permissions": [
    "http://localhost:8082/",
    "ws://localhost:8082/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://zipcaptions.app/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
    "icons": {
    "16": "./icons/16.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  }
}